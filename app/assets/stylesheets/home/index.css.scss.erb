@import "compass/css3/box-shadow";
@import "compass/css3/border-radius";
@import "compass/css3/pie";
@import "compass/css3";
@import "mixins";

$pie-behavior: url("/assets/PIE.htc");
$pie-base-class: pie-element;

.pie-element {
  @include pie-element(relative);
}

// Tablet-Size and Under
@media all and (max-width: 767px) {
	.navbar-static-top {
		margin: {
			right: 0px !important;
			left: -20px !important;
			width: auto !important;
		}
		.navbar-inner {
			padding: {
				right: 0px !important;
			}
		}
	}
	#postits {
		.span4 {
			margin: {
				bottom: 9px;
			}
		}
	}
}

// Phone
@media all and (max-width: 517px) {
	#header {
		height: 140px !important;
		min-height: 140px !important;
		h1 {
			margin-left: auto !important;
			top: 22px !important;
			text-align: center;
		}
	}
}

// Wide-Screen
@media all and (min-width: 1200px) {
	#sidebar {
		display: block !important;
		float: right;
		width: 175px;
		div {
			$height: 140px;
			border-radius: 15px;
			box-shadow: 0px 1px 6px rgba(0,0,0,0.8);
			height: $height;
			min-height: $height;
			max-height: $height;
			text-align: center;
			&:hover {
				box-shadow: 0px 1px 7px 1px black;
			}
		}
	}
	
	#stuff {
		float: left;
		min-width: 940px;
		padding: {
			right: 20px !important;
		}
	}
	
	#yearbook {
		background: {
			color: #c51046;
		}
			}
	#snowflake {
		background: {
			color: #286cff !important;
		}
		color: white;
		h4 {
			position: relative;
			top: 10px;
		}
		p {
			position: relative;
			top: 35px;
		}
	}
	#playfest {
		color: white;
		background: {
			color: #319358 !important;
		}
		h4 {
			margin: {
				bottom: 23px;
			}
			position: relative;
			top: 10px;
		}
		p {
			margin: 0 auto;
			width: 95%
		}
	}
}

// All

body {
	@include backgroundNoise;
}


#stuff {
	@include pie;
	background: {
		color: white;
	}
	border-radius: 0px 0px 4px 4px;
	box-shadow: 0px 0px 7px 1px black;
	
	margin: {
		bottom: 12px;
	}
	min-height: 10px;
	padding: {
		left: 0px !important;
		right: 0px !important
	}
	position: relative;
	z-index: 1;
}

#header {
	min-height: 230px;
	background: {
		image: url(<%= image_path('entrance.png') %>);
		position: center;
	}
	box-shadow: inset 0px -20px 20px -18px black;
	h1 {
		color: white;
		width: 90%;
		margin: 0 auto;
		margin: {
			top: 0px;
			bottom: 0px;
		}
		padding: {
			top: 0px;
			bottom: 0px;
		}
		position: relative;
		text-shadow: 1px 1px 5px rgba(30,30,30,0.9);
		top: 180px;
	}
}

#announcements {
	//Padding for announcement text on home page
	@include pie;
	p {
		padding: {
		left: 5px;
		right: 5px;
		}
	}
	background: {
		color: #e7e7e7;
	}
	@include box-shadow(rgba(0,0,0,0.68) 1px 1px 6px);
	margin: 0 auto;
	margin: {
		top: 15px;
		bottom: 5px;
	}
	max-width: 836px;
	min-height: 100px;
	width: 89%;
	h3 {
		text-align: center;
		line-height: 24px;
	}
	#basic_info {
		width: 90%;
		margin: 0 auto;
		margin: {
			bottom: 40px;
		}
	}
	#bullets {
		margin: 0 auto;
		width: 90%;
		ul {
			clear: both;
		}
	}
	.chunk {
		h2 {
			display: none;
		}
		li {
			font-size: 16px;
			line-height: 18px;
			padding: {
				bottom: 6px;
			}
		}
	}
}

.alert {
	margin: {
		top: 10px;
		left: auto;
		right: auto;
		bottom: -3px;
	}
	width: 84%;
}

#events {
	$bottomPadding: 10px;
	margin: 0 auto;
	margin: {
		top: 13px;
		bottom: 10px;
	}
	width: 89%;
	h3 {
		margin: {
			bottom: 5px;
			top: 5px;
		}
		text-align: center;
	}
	#upcoming {
  	@include pie;
  	background: {
			color: #fffac1;
		}
		@include box-shadow(1px 1px 6px rgba(0,0,0,0.68));
		padding: {
			bottom: $bottomPadding;
			right:5px; 
			left:5px;
		}

	}
	#recent {
  	@include pie;
		@include box-shadow(1px 1px 6px rgba(0,0,0,0.68));
		background: {
  		color: white;
		}
		padding: {
			bottom: $bottomPadding;
			right:5px; 
			left:5px;
		}
	}
}

// memo variables
$smallestMax: 517px;
$smallMax: 669px;
$midMax: 979px;

#memos_wrapper {
  position: relative;
}

#memos {
  min-height: 11em;
  display: block;
  padding: {
    left: 5px;
    right: 4px;
    top: 2px;
    bottom: 4px;
  }
  margin: {
    top: .8em;
    right: auto;
    left: auto;
  }
  overflow-x: hidden;
  width: 837px;
  @media (max-width: $smallestMax) {
    width: 275px;
  }
  @media (max-width: $smallMax) and (min-width: $smallestMax +1) {
    width: 275px;
  }
  @media (max-width: $midMax) and (min-width: $smallMax + 1) {
    width: 553px;
  }
  @media (min-width: $midMax + 1) {
    width: 89%;
  }
}

#slider {
  margin: {
    left: -4px;
  }
  min-height: 10em;
  position: relative;
  width: 3400px;
}

#advance {
  position: absolute;
  display: block;
  top: 5em;
  z-index: 1000;
  left: 894px;
  @media (max-width: $smallestMax) {
    left: 80%;
  }
  @media (max-width: $smallMax) and (min-width: $smallestMax + 1) {
    left: 85%;
  }
  @media (max-width: $midMax) and (min-width: $smallMax + 1) {
    left: 90.5%;
  }
}
#reverse {
  position: absolute;
  display: block;
  top: 5em;
  z-index: 1000;
  left: 10px;
  @media (max-width: $smallestMax) {
    left: 10%;
  }
  @media (max-width: $smallMax) and (min-width: $smallestMax + 1) {
    left: 6.5%;
  }
  @media (max-width: $midMax) and (min-width: $smallMax + 1) {
    left: 5%;
  }
}

.memo {
  @include pie;
  @include box-shadow(rgba(0,0,0,0.68) 1px 1px 6px);
  @include border-radius(6px);
  display: block;
  float: left;
  margin: {
    left: 5px;
    right: 5px;
  }
  text-align: center;
  height: 12em;
  width: 271px;
  ul {
    padding: {
      left: 7px;
    }
    text-align: left;
  }
}