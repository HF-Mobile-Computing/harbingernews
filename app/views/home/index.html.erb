<% content_for :css do %>
  <%= stylesheet_link_tag "home/index", :media => "all" %>
<% end %>
<% content_for :js do %>
  <%= javascript_include_tag "home" %>
<% end %>

<div id="all">
  <div class="container-fluid" id="stuff">
  	<div class="row-fluid"><!-- header -->
  		<div class="span12" id="header">
  			<h1>Harborfields High School</h1>
  		</div>
  	</div><!-- end header -->
    
    <% flash.each do |type, message| %>
      <div class="alert <%= bootstrap_class_for(type) %> fade in">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= message %>
      </div>
    <% end %>
  	
    <div class="row-fluid" id="announcements">
  		<h3><a href="https://sites.google.com/site/harborfieldshs/">Today's Announcements</a></h3>
  		 <p><%=raw @announcement.content %></p>
  	</div>
  	<div id="slider" class="carousel slide row-fluid">
      <div class="carousel-inner">
        <div class="item active">
          <img src="http://placehold.it/850x550">
          <div class="carousel-caption">
            <h4>Heading 1</h4>
            <p>Content for Carousel Content 1</p>
          </div>
        </div>
      </div>
      <div class="item">
          <img src="http://placehold.it/850x550">
          <div class="carousel-caption">
            <h4>Heading 2</h4>
            <p>Content for Carousel Content 2</p>
          </div>
        </div>
      </div>
      <div class="item">
          <img src="http://placehold.it/850x550">
          <div class="carousel-caption">
            <h4>Heading 3</h4>
            <p>Content for Carousel Content 3</p>
          </div>
        </div>
      </div>
      <a class="right carousel-control" href="slider" data-slide="prev">&lsaquo</a>
      <a class="left carousel-control" href="slider" data-slide="next">&rsaquo</a>

    </div>
  	<div class="row-fluid" id="events">
  		<div class="span6">
  		  <div id="upcoming">
    			<h3>Upcoming Events</h3>
          <%=raw @upcoming.content %>
  		  </div>
  		</div>
  		<div class="span6">
  		  <div id="recent">
    			<h3>Recent Events</h3>
    			<%=raw @recent.content %>
  		  </div>
  		</div>
  	</div>
  </div>
</div>

