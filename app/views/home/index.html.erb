<% content_for :css do %>
  <%= stylesheet_link_tag "home/index", :media => "all" %>
<% end %>
<% content_for :js do %>
  <%= javascript_include_tag "home" %>
<% end %>

<div id="all">
  <div class="container-fluid" id="stuff">
  <div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item CarouselImg">
      <img src="<%= image_path('entrance.png') %>">
      <div class="carousel-caption">
      <h4>Welcome to Harbinger News!</h4>
      <p>The official website of the Harborfields News Team</p>
      </div>
    </div>
    <div class="item CarouselImg">
      <img src="<%=raw @slide1.try(:imgurl) %>">
      <div class="carousel-caption">
      <h4><%=raw @slide1.try(:title) %></h4>
      <p><%=raw @slide1.try(:caption) %></p>
      </div>    
    </div>
    <div class="item CarouselImg">
      <img src="<%=raw @slide2.try(:imgurl) %>">
      <div class="carousel-caption">
      <h4><%=raw @slide2.try(:title) %></h4>
      <p><%=raw @slide2.try(:caption) %></p>
      </div> 
    </div>
  </div>
  <!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>
<% flash.each do |type, message| %>
      <div class="alert <%= bootstrap_class_for(type) %> fade in">
        <button class="close" data-dismiss="alert">Ã—</button>
        <%= message %>
      </div>
    <% end %>
    <div class="row-fluid" id="announcements">
      <h3><a href="https://sites.google.com/site/harborfieldshs/">Today's Announcements</a></h3>
       <p><%=raw @announcement.content %></p>
    </div>
    <div class="row-fluid" id="events">
      <div class="span4">
        <div id="upcoming">
          <h3>Upcoming Events</h3>
          <%=raw @upcoming.content %>
        </div>
      </div>
      <div class="span4">
        
          <h5 style="text-align: center;"><a href="https://hscsd.follettdestiny.com/common/servlet/presenthomeform.do;jsessionid=A8BAFF7F91F8B4A46FE4463A6642DAD9?l2m=Home&tm=Home&l2m=Home">Click here for the HHS library's Destiny Quest database</a></h5>
        
          <% if @day.aorb == "A" %>
            <h3>Today is an</h3>
            <h1 style="text-align: center;"> A Day</h1>
          <% elsif @day.aorb == "B" %>
            <h3>Today is a</h3>
            <h1 style="text-align: center;"> B Day</h1>
          <% elsif @day.aorb == "none" %>
            <h3>There is no school today</h3>
          <% end %>
        
      </div>
      <div class="span4">
        <div id="recent">
          <h3>Recent Events</h3>
          <%=raw @recent.content %>
        </div>
      </div>
    </div>
  </div>
</div>

