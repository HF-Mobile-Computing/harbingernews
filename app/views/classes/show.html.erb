<% content_for :title do %><%= @class.name %> | HF Clubs<% end %>
<% content_for :css do %>
  <%= stylesheet_link_tag    "clubs", :media => "all" %>
  <style type="text/css">
    #favorite_button i {
      margin-top: 9px;
    }
    .favorite i {
      color: gold !important;
      text-shadow: 0px 0px 2px rgba(79,79,79,0.64);
    }
    i:hover {
      text-shadow: 0px 0px 2px black;
    }
  </style>
<% end %>
<% content_for :js do %>

<% end %>
<% content_for :above_container do %>
  <%= render 'classes_header' %>
<% end %>
<% content_for :js_bottom do %>
  <% javascript_include_tag 'class/page' %>
<% end %>


<div class="row">
	<div class = "offset1 span10" id='announcements'>
		<h2 style = "text-align: center;">About <%= @class.name %></h2>
    
    <ul class="nav nav-tabs" style="text-align:center;">
      <li class="active"><a href="#info" data-toggle="tab">Info</a></li>
      <li class="disabled"><a href="#" data-toggle="tab">Pictures</a></li>
     </ul>
    <div class="tab-content">
      <div class="tab-pane active limited-width" id="info">
        <div class = '' style = "clear: both;">
          <%=raw @class.content %>
        </div>
      </div>
      <div class="tab-pane limited-width" id="photos">
         <%= render_gallery_for @photos, original: 'photo(:original)', thumbnail: 'photo(:thumbnail)' %>
      </div>
      
    </div>
  </div>
</div><!-- end "row" -->
