  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-45158154-1', 'harbingernews.net');
  ga('send', 'pageview');

</script>
  
</head>
<body>

  <div id="content">
    <%= render 'layouts/header' %>
    <%= yield :above_container %>
    <div class="container">
    <div id="myModal" class="modal hide" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true" style = "height: 500px; width: 600px; margin-left: -300px;">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Konami Code!</h3>
        </div>
        <div class="modal-body" style = "height: 100% !important;">
        </div>
      </div>

   
      <%= yield %>
      
      <%= debug(params) if Rails.env.development? %>
    </div>
    <div id="footer_spacer"></div>
	</div><!-- end "content"-->
	 
	<%= render 'layouts/footer' %>
	<%= yield :js_bottom %>
</body>
</html>
